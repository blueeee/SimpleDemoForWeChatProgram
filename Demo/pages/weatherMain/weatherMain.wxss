page {
  height: 100%;
} 
text {
  color: #FFFFFF;
  font-family: Georgia,serif;
}
#container {
  height: 100%;
  background-image: url("../../image/bg_na.png");
}
scroll-view {
  height: 1204rpx;
}
#container-back{
  height: 1600rpx;
  padding-top: 50rpx;
}
#title {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
#city {
  font-size: 1.3em;
}
#weather-description {
  font-size: 0.8em;
}
#temperature {
  font-size: 3.0em;
  margin-top: 50rpx;
}
/*forecast*/
#forecast{
  background-color: rgba(0,0,0,0.2);
  height: 820rpx;
  margin-top: 50rpx;
  padding: 10rpx 0rpx 0rpx 0rpx;
}
#forecast-text {
  font-size: 0.7em;
  margin-left: 20rpx;
}
.line {
  background-color: rgba(178,178,178,0.3);
}
#forecast-top-line {
  width: 100%;
  height: 1rpx;
  margin-top: 15rpx;
}
/*forecast-container-days*/
.forecast-container-days {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-content: space-between;
}
.weatherForecast-item {
  width: 150rpx;
  display: flex;
  flex-direction: column; 
  justify-content: space-between;
  align-items: center;
}
.weatherForecast-item-day, .weatherForecast-item-date, .weatherForecast-item-description {
  font-size: 0.72em;
  margin-top: 10rpx;
}
.weatherForecast-item-img {
  margin-top: 20rpx;
  height: 55rpx;
  width: 55rpx;
}
/*forecast-container-mid*/
#forecast-container-mid {
  margin-top: 20rpx;
  height: 320rpx;
  width: 750rpx;
  background-color: rgba(0,0,0,0.1);
}
#forecast-canvas{
  height: 320rpx;
  width: 750rpx;
}
/*footer*/
#footer{
  height: 50rpx;
  background-color: rgba(0,0,0,0.1);
}
#to-city{
  margin-top: 5rpx;
  padding-left: 93%; 
  width: 40rpx;
  height: 40rpx;
}
/*weather-detail*/
#weather-detail{
  background-color: rgba(0,0,0,0.2);
  margin-top: 30rpx;
  height: 360rpx;
  display: flex;
  flex-direction: column;
}
.weather-detail-content{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.weather-detail-key{
  width: 360rpx;
  text-align: end;
  font-size: 30rpx;
}
.weather-detail-value{
  width: 360rpx;
  text-align: start;
  font-size: 30rpx;
}
